{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "migrations/**/*", "seeds/**/*", "scripts/migrate.ts", "scripts/seed.ts", "test/**/*"],
  "exclude": ["node_modules", "dist", "scripts/test-scrape.ts", "scripts/analyze-html.ts", "scripts/analyze-article.ts"]
}
